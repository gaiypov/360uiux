# ========================================
# ОБЩИЕ НАСТРОЙКИ
# ========================================
NODE_ENV=development
PORT=5000
APP_URL=http://localhost:5000

# ========================================
# JWT АУТЕНТИФИКАЦИЯ
# ========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_EXPIRES_IN=30d
JWT_REFRESH_EXPIRES_IN=90d

# ========================================
# ВИДЕО ПРОВАЙДЕР
# Выбрать: 'api.video' или 'yandex'
# ========================================
VIDEO_PROVIDER=api.video

# api.video (Рекомендуется для начала)
API_VIDEO_KEY=your_api_video_key_here

# Yandex Cloud Video (Полностью российский стэк)
YANDEX_ACCESS_KEY=your_yandex_access_key
YANDEX_SECRET_KEY=your_yandex_secret_key
YANDEX_VIDEO_BUCKET=vacancy-videos
YANDEX_IAM_TOKEN=your_iam_token

# ========================================
# БАЗА ДАННЫХ
# Выбрать: 'yandex' | 'vk' | 'supabase' | 'local'
# ========================================
DB_PROVIDER=local

# Yandex Managed PostgreSQL
YANDEX_PG_HOST=rc1a-xxx.mdb.yandexcloud.net
YANDEX_PG_DATABASE=360_rabota
YANDEX_PG_USER=admin
YANDEX_PG_PASSWORD=your_password
YANDEX_PG_CA_CERT=/path/to/yandex/root.crt

# VK Cloud PostgreSQL
VK_PG_HOST=postgres-xxx.vpc.mcs.mail.ru
VK_PG_DATABASE=360_rabota
VK_PG_USER=admin
VK_PG_PASSWORD=your_password

# Supabase
SUPABASE_URL=https://xxx.supabase.co
SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key
SUPABASE_DB_PASSWORD=your_db_password

# Local PostgreSQL (Development)
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=360_rabota
PG_USER=postgres
PG_PASSWORD=postgres

# ========================================
# SMS (SMS.RU)
# ========================================
SMS_RU_API_KEY=your_sms_ru_api_key_here

# ========================================
# REDIS (для OTP кодов и кэширования)
# ========================================
REDIS_URL=redis://localhost:6379

# ========================================
# ПЛАТЕЖИ
# ========================================

# Тинькофф Acquiring
TINKOFF_TERMINAL_KEY=your_tinkoff_terminal_key
TINKOFF_SECRET_KEY=your_tinkoff_secret_key
TINKOFF_API_URL=https://securepay.tinkoff.ru/v2

# Альфабанк Acquiring
ALFABANK_USERNAME=your_alfabank_username
ALFABANK_PASSWORD=your_alfabank_password
ALFABANK_API_URL=https://payment.alfabank.ru/payment/rest

# ========================================
# CORS
# ========================================
CORS_ORIGIN=http://localhost:3000,http://localhost:8081
