# 360° РАБОТА - Production Environment Configuration
# Copy this file to .env.production and fill in your values

# ===================================
# APPLICATION
# ===================================
NODE_ENV=production
PORT=5000

# ===================================
# DATABASE (PostgreSQL)
# ===================================
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_NAME=360rabota_prod
DB_HOST=postgres
DB_PORT=5432
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# ===================================
# REDIS CACHE
# ===================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# ===================================
# AUTHENTICATION
# ===================================
JWT_SECRET=your_very_long_and_secure_jwt_secret_here_min_32_chars
JWT_EXPIRES_IN=7d

# ===================================
# ONESIGNAL PUSH NOTIFICATIONS
# ===================================
ONESIGNAL_APP_ID=your_onesignal_app_id
ONESIGNAL_REST_API_KEY=your_onesignal_rest_api_key

# ===================================
# YANDEX CLOUD (Video Storage)
# ===================================
YANDEX_ACCESS_KEY_ID=your_yandex_access_key
YANDEX_SECRET_ACCESS_KEY=your_yandex_secret_key
YANDEX_BUCKET=360rabota-videos
YANDEX_REGION=ru-central1
YANDEX_IAM_TOKEN=your_yandex_iam_token

# ===================================
# SMS PROVIDER
# ===================================
SMS_API_KEY=your_sms_api_key
SMS_SENDER=360RABOTA

# ===================================
# PAYMENT PROVIDERS
# ===================================
# Tinkoff
TINKOFF_TERMINAL_KEY=your_tinkoff_terminal_key
TINKOFF_SECRET_KEY=your_tinkoff_secret_key

# Alfabank
ALFABANK_USERNAME=your_alfabank_username
ALFABANK_PASSWORD=your_alfabank_password

# ===================================
# CORS
# ===================================
CORS_ORIGIN=https://360rabota.ru,https://app.360rabota.ru

# ===================================
# RATE LIMITING
# ===================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===================================
# LOGGING
# ===================================
LOG_LEVEL=info
LOG_FILE=/var/log/360rabota/app.log

# ===================================
# MONITORING
# ===================================
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=production

# ===================================
# VIDEO PROCESSING
# ===================================
VIDEO_MAX_SIZE_MB=100
VIDEO_MAX_DURATION_SEC=60
VIDEO_COMPRESSION_QUALITY=23

# ===================================
# ANALYTICS
# ===================================
CACHE_TTL_SHORT=60
CACHE_TTL_MEDIUM=300
CACHE_TTL_LONG=1800
